<%= form_with scope: :article, url: articles_path, local: true do |form| %>

    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>
   
    <p>
      <%= form.label :text %><br>
      <%= form.rich_text_area :text %>
    </p>
    <p>
      <%= form.label :comment %><br>
      <%= form.rich_text_area :comment %>
    </p>
   
    <p>
      <%= form.submit %>
    </p>
  <% end %>